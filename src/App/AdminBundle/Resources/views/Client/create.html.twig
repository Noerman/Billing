{% extends 'AppAdminBundle::Base.html.twig' %}

{% block masterHeadText %}
    <h2>{{ 'ADD_CLIENT' | trans }}</h2>
{% endblock %}

{% block content %}
    {% embed 'AppAdminBundle:Component:breadscrum.html.twig' with {'breadscum': breadscrum} %}
    {% endembed %}

    {% embed 'AppAdminBundle:Component:form_one_column.html.twig' with {'form': form} %}
    {% block visibleFields %}

    <div class="row-fluid form-page" style="margin-top: 1em">
        <div class="span6">

            <div class="row-fluid">
                {{ form_label(form['view']['firstname']) }}
                {{ form_widget(form['view']['firstname']) }}
                {{ form_errors(form['view']['firstname']) }}
            </div>

            <div class="row-fluid">
                {{ form_label(form['view']['lastname']) }}
                {{ form_widget(form['view']['lastname']) }}
                {{ form_errors(form['view']['lastname']) }}
            </div>

            <div class="row-fluid">
                {{ form_label(form['view']['email']) }}
                {{ form_widget(form['view']['email']) }}
                {{ form_errors(form['view']['email']) }}
            </div>

            <div class="row-fluid">
                {{ form_label(form['view']['plainPassword']) }}
                {{ form_widget(form['view']['plainPassword']) }}
                {{ form_errors(form['view']['plainPassword']) }}
            </div>

            <div class="row-fluid">
                <div class="span6">
                    {{ form_label(form['view']['company']) }}
                    {{ form_widget(form['view']['company']) }}
                    {{ form_errors(form['view']['company']) }}
                </div>
                <div class="span6">
                    {{ form_label(form['view']['phone']) }}
                    {{ form_widget(form['view']['phone']) }}
                    {{ form_errors(form['view']['phone']) }}
                </div>
            </div>

        </div>

        <div class="span6">
            <div class="row-fluid">
                {{ form_label(form['view']['address1']) }}
                {{ form_widget(form['view']['address1']) }}
                {{ form_errors(form['view']['address1']) }}
            </div>

            <div class="row-fluid">
                {{ form_label(form['view']['address2']) }}
                {{ form_widget(form['view']['address2']) }}
                {{ form_errors(form['view']['address2']) }}
            </div>

            <div class="row-fluid">
                <div class="span6">
                    {{ form_label(form['view']['city']) }}
                    {{ form_widget(form['view']['city']) }}
                    {{ form_errors(form['view']['city']) }}
                </div>
                <div class="span6">
                    {{ form_label(form['view']['state']) }}
                    {{ form_widget(form['view']['state']) }}
                    {{ form_errors(form['view']['state']) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6">
                    {{ form_label(form['view']['postcode']) }}
                    {{ form_widget(form['view']['postcode']) }}
                    {{ form_errors(form['view']['postcode']) }}
                </div>
                <div class="span6">
                    {{ form_label(form['view']['idCountry']) }}
                    {{ form_widget(form['view']['idCountry']) }}
                    {{ form_errors(form['view']['idCountry']) }}
                </div>
            </div>

            <div class="row-fluid">
                <div class="span6">
                    {{ form_label(form['view']['vatNumber']) }}
                    {{ form_widget(form['view']['vatNumber']) }}
                    {{ form_errors(form['view']['vatNumber']) }}
                </div>
                <div class="span6">
                    {{ form_label(form['view']['status']) }}
                    {{ form_widget(form['view']['status']) }}
                    {{ form_errors(form['view']['status']) }}
                </div>
            </div>

        </div>
    </div>

    {% endblock %}
    {% endembed %}

{% endblock %}
