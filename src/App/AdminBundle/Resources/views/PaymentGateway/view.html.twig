{% extends 'AppAdminBundle:Base:create_one_column.html.twig' %}

{% block content %}
    <h4>{{ 'GATEWAY_LIST' | trans }}</h4>
    <br />
    <div class="pull-right" style="margin-bottom: 10px">
        <a href="{{ path('app_client_ticket_create') }}" class="btn btn-small btn-primary">{{ 'CREATE_NEW_GATEWAY' | trans }}</a>
    </div>
    {% embed 'AppClientBundle:Component:grid.html.twig' with {'grid': grid} %}
        {% block header %}
            <th>{{ 'ID' | trans }}</th>
            <th>{{ 'SUBJECT' | trans }}</th>
            <th>{{ 'STATUS' | trans }}</th>
            <th>{{ 'LAST_UPDATE' | trans }}</th>
            <th></th>
        {% endblock %}

        {% block rowData %}
            <td>{{ row['id'] }}</td>
            <td>{{ row['subject'] }}</td>
            <td>{{ row['status'] }}</td>
            <td>{{ row['last'] }}</td>
            <td>
                <a href="{{ ticketItemUrl }}?id={{ row['id'] }}">{{ 'VIEW' | trans }}</a>
            </td>
        {% endblock %}
    {% endembed %}
{% endblock %}